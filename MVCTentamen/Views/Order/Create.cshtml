@model viewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Order.Title" class="control-label"></label>
                <input asp-for="@Model.Order.Title" class="form-control" />
                <span asp-validation-for="@Model.Order.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Order.Price" class="control-label"></label>
                <input asp-for="@Model.Order.Price" class="form-control" />
                <span asp-validation-for="@Model.Order.Price" class="text-danger"></span>
            </div>
            <select name="customerId">
                @foreach (var customer in Model.AllCustomers)
                {
                    <option value="@customer.Id">@customer.Firstname</option>
                }

            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
